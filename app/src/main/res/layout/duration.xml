<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nearWhite"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="请完善佩戴信息"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="开始佩戴日期"
                android:textColor="@color/text_color_main"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:layout_toLeftOf="@+id/clearStartTime"
                android:background="@null"
                android:hint="格式：年/月/日"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_content"
                android:textColorHint="@color/text_color_hint"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/clearStartTime"
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/pic1" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="预计佩戴结束"
                android:textColor="@color/text_color_main"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/termination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:layout_toLeftOf="@+id/clearTermination"
                android:background="@null"
                android:hint="格式：年/月/日"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_content"
                android:textColorHint="@color/text_color_hint"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/clearTermination"
                android:layout_width="19dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/pic1" />

        </RelativeLayout>
    </LinearLayout>



    <Button
        android:id="@+id/button_DaysAc_to_DurationAc"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_button_white"
        android:text="完成"/>




</LinearLayout>